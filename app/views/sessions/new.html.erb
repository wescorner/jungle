<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="row">
    <div class="col">
      <label for="email">Email</label>
      <%= text_field_tag :email %>
    </div>
    <div class="col">
      <label for="password">Password</label>
      <%= password_field_tag :password %>
    </div>
  </div>
  <br> 
  <%= submit_tag "Submit" %>

<% end %>