<header class="page-header">
  <h1>Login &raquo;</h1>
</header>

<%= form_tag '/login' do %>
  <div class="form-control form-control-lg">
    <div class="row">
      <div class="col">
        <label for="email">Email</label>
        <%= text_field_tag :email %>
      </div>
      <div class="col">
        <label for="password">Password</label>
        <%= password_field_tag :password %>
      </div>
    </div>
  </div>
  <br> 
  <%= submit_tag "Submit" %>

<% end %>