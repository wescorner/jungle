<header class="page-header">
  <h1>Signup &raquo;</h1>
</header>

<div>
  <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group">
      <label for="firstname">First Name</label>
      <%= f.text_field :first_name, class: "form-control", id: "firstname" %>
    </div>
    <div class="form-group">
      <label for="lastname">Last Name</label>
      <%= f.text_field :last_name, class: "form-control", id: "lastname" %>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <%= f.text_field :email, class: "form-control", id: "email", type: "email" %>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <%= f.text_field :password, class: "form-control", id: "password", type: "password"%>
    </div>
    <div class="form-group">
      <label for="password_confirmation">Confirm Password</label>
      <%= f.text_field :password_confirmation, class: "form-control", id: "password_confirmation", type: "password" %>
    </div>
    <br>
    <div>
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>